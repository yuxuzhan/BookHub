<% include header%>
<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-4">
            <h2><%= user.name %></h2>
        </div>
        <div class="col-md-4">
            <img src="<%=user.image.data %>" class="bookhub_profile_img" alt="profile_img"/>
        </div>
        <div class="col-md-8">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Email</th>
                        <td><%= user.email %></td>
                    </tr>
                    <tr>
                        <th>Phone</th>
                        <td><%= user.phone %></td>
                    </tr>
                    <tr>
                        <th>Score</th>
                        <% if(isNaN(score)) {%>
                        <td>No score yet</td>
                        <% }else{ %>
                        <td><%= score %>/5</td>
                        <% } %>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
        <ul class="nav nav-tabs">
            <li class="active"><a data-toggle="pill" href="#review">Reviews</a></li>
            <li><a data-toggle="pill" href="#listing">Listings</a></li>
        </ul>

        <div class="tab-content">
        <div id="review" class="tab-pane fade in active">
            <table class="table">
            <tbody>
                <thead>
                    <tr>
                      <th>Reviewer</th>
                      <th>Rate</th>
                      <th>Review</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (var i=0; i < reviews.length; i++){ %>
                    <tr>
                        <td><%= reviews[i].buyer %></td>
                        <td><%= reviews[i].rate %>/5</td>
                        <td><%= reviews[i].review %></td>
                    </tr>
                    <% } %>
                </tbody>
            </tbody>
            </table>

            <form method="post" action="/review/<%= user.userId %>">
                <div class="row">
                    <div class="form-group col-md-6">
                        <label for="review">Review the seller</label>
                        <textarea class="form-control" name="review" id="review" rows="3"></textarea>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-2">
                    <label for="rate">Rate the seller</label>
                        <select class="form-control" name="rate" id="rate">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                        </select>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>

        <div id="listing" class="tab-pane fade">
            <div class="row">
            <div class="col-md-12">
                <table class="table table-hover">
                    <thead>
                        <tr>
                          <th>Picture</th>
                          <th>Title</th>
                          <th>Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (var i=0; i < books.length; i++){ %>
                        <tr>
                            <td><img class="bookhub_thumb_img" src="<%= books[i].image.data %>" alt="book_image"></td>
                            <td><a href="/books/<%= books[i].bookId %>"><%= books[i].booktitle %></a></td>
                            <td><%= books[i].price %></td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
            </div>
        </div>

        </div>
        </div>
    </div>
    </div>
</div>
<% include footer %>
