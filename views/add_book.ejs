<% include header_background %>
<div class="container-fluid">
    <section class="container">
        <div class="container-page">
            <div class="col-md-6 col-md-offset-3">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Add Book</h3>
                    </div>
                <div class="panel-body">
                    <form method="post" enctype="multipart/form-data" action="/addbook">

                        <div class="form-group col-lg-12">
                            <label>Book Name</label>
                            <input type="text" name="bookname" class="form-control" id="" value="">
                        </div>

                        <div class="form-group col-lg-12">
                            <label>Author</label>
                            <input type="text" name="author" class="form-control" id="" value="">
                        </div>

                        <div class="form-group col-lg-12">
                            <label>ISBN</label>
                            <input type="text" name="ISBN" class="form-control" id="" value="">
                        </div>

                        <div class="form-group col-lg-12">
                            <label>Course Code</label>
                            <input type="text" name="courseCode" class="form-control" id="" value="">
                        </div>

                        <div class="form-group col-lg-12">
                            <label>Price</label>
                            <input type="number" name="price" class="form-control" id="" value="">
                        </div>

                        <div class="form-group col-lg-6">
                            <label>Condition</label>
                            <select class="form-control" name="condition">
                                <option value="4">New</option>
                                <option value="3">Good</option>
                                <option value="2">Fair</option>
                                <option value="1">Poor</option>
                            </select>
                        </div>

                        <div class="form-group col-lg-6">
                            <label>Select images</label>
                            <input type="file" name="file" accept = "image/*">
                        </div>

                        <div class="form-group col-lg-12">
                            <label>Description</label>
                            <textarea class="form-control" name = "description" rows="5" id=""></textarea>
                        </div>

                        <div class = "col-lg-12">
                            <button type="submit" class="btn btn-md btn-primary add_book_button">List Book</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
<% include footer %>
