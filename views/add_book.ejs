<% include header_background %>

<div class="container-fluid">
    <section class="container">
        <div class="container-page">
            <div class="col-md-6 col-md-offset-3">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Add Book</h3>
                    </div>
                    <% if (error !== 'undefined' || error.length > 0) { %>
                      <div class="alert-danger"><%= error %></div>
                    <% } %>
                    <div class="panel-body">
                        <ul class="nav nav-tabs">
                            <li class="active"><a data-toggle="pill" href="#active">Manual Input Book Info</a></li>
                            <li><a data-toggle="pill" href="#autofill">Autofill by ISBN</a></li>
                        </ul>
                        <div class="tab-content">
                            <div id="active" class="tab-pane fade in active">

                                <form method="post" enctype="multipart/form-data" action="/books">

                                    <div class="form-group col-lg-12">
                                        <label>Book Name</label>
                                        <input type="text" name="bookname" class="form-control" required>
                                    </div>

                                    <div class="form-group col-lg-12">
                                        <label>Author</label>
                                        <input type="text" name="author" class="form-control">
                                    </div>

                                    <div class="form-group col-lg-12">
                                        <label>ISBN</label>
                                        <input type="text" name="ISBN" class="form-control">
                                    </div>

                                    <div class="form-group col-lg-12">
                                        <label>Course Code</label>
                                        <input type="text" name="courseCode" class="form-control">
                                    </div>

                                    <div class="form-group col-lg-12">
                                        <label>Price</label>
                                        <input type="number" step="0.01" name="price" class="form-control" required>
                                    </div>

                                    <div class="form-group col-lg-6">
                                        <label>Condition</label>
                                        <select class="form-control" name="condition">
                                            <option value="4">New</option>
                                            <option value="3">Good</option>
                                            <option value="2">Fair</option>
                                            <option value="1">Poor</option>
                                        </select>
                                    </div>

                                    <div class="form-group col-lg-6">
                                        <label>Select images (optional)</label>
                                        <input type="file" name="file" accept = "image/*">
                                    </div>

                                    <div class="form-group col-lg-12">
                                        <label>Description</label>
                                        <textarea class="form-control" name = "description" rows="5"></textarea>
                                    </div>

                                    <div class = "col-lg-12">
                                        <button type="submit" class="btn btn-md btn-primary add_book_button">List Book</button>
                                    </div>
                                </form>
                            </div>

                            <div id="autofill" class="tab-pane fade">
                                <form method="post" enctype="multipart/form-data" action="/books/ISBN">

                                    <div class="form-group col-lg-12">
                                        <label>ISBN</label>
                                        <input type="text" name="ISBN_autofill" class="form-control">
                                    </div>

                                    <div class="form-group col-lg-12">
                                        <label>Course Code</label>
                                        <input type="text" name="courseCode_autofill" class="form-control">
                                    </div>

                                    <div class="form-group col-lg-12">
                                        <label>Price</label>
                                        <input type="number" step="0.01" name="price_autofill" class="form-control" required>
                                    </div>

                                    <div class="form-group col-lg-6">
                                        <label>Condition</label>
                                        <select class="form-control" name="condition_autofill">
                                            <option value="4">New</option>
                                            <option value="3">Good</option>
                                            <option value="2">Fair</option>
                                            <option value="1">Poor</option>
                                        </select>
                                    </div>

                                    <div class = "col-lg-12">
                                        <button type="submit" class="btn btn-md btn-primary add_book_button">List Book</button>
                                    </div>
                                </form>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<% include footer %>
